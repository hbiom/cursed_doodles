<div class = "edt">
  <h1> <%= @event.name %> </h1>
  <div class = "edt-header">
    <p> by <%=@event.users.first.name %> <%= fa_icon("circle") %>  </p>
    <p> <%= ((Time.now - @event.created_at )/6000).round() %> mins ago <%= fa_icon("circle") %>  </p>
    <p> <%= "print" %></p>
  </div>

  <div class = "edt-info">
    <p> <%= @event.place %></p>
    <p> <%= "note" %> </p>
  </div>


  <% date_event = [] %>
   <% (@event.start_event..@event.end_event).each do |date| %>
        <% date_event << date %>
      <% end %>

      <% participants = Hash.new(0) %>

  <table class="doodles">
    <tr>
      <th></th>
      <% date_event = [] %>
      <% (@event.start_event..@event.end_event).each do |date| %>
        <th><%= date.strftime("%d/%m") %></th>
        <% date_event << date %>
      <% end %>
    </tr>
      <tr>
        <td> <%= @event.users.count %> Participants </td>
        <% @event.participants.each do |date, number| %>
          <td> <%= fa_icon("check") %> <%= number %> </td>
        <% end %>
      </tr>
      <% unless @users.empty? %>
        <% @users.each do |user| %>
    <tr>
      <td> <%= user.name %> </td>
        <% date_user = [] %>
        <%(user.start..user.end).each do |date| %>
          <% date_user << date %>
        <% end %>

        <% (@event.start_event..@event.end_event).each do |item| %>
          <% if date_user.include?(item) %>
            <td> <%= fa_icon("check") %> </td>
          <% else %>
            <td> <%= fa_icon("times") %> </td>
          <% end %>
        <% end %>
      <% end %>
    </tr>
      <% end %>
  </table>
  <%= link_to "invite a user", new_event_user_path(@event) %>
</div>

